{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "baseUrl": ".",
    "paths": {
      "@env": ["src/config/envNames"],
      "@app": ["src/app"],
      "@controllers/*": ["src/controllers/*"],
      "@routes": ["src/routes"],
      "@components/*": ["src/components/*"],
      "@styles/*": ["src/styles/*"],
      "@services/*": ["src/services/*"],
      "@providers/*": ["src/providers/*"],
      "@roadmap/*": ["src/roadmap/*"]
    },
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "sourceMap": true,
    "jsx": "preserve"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
